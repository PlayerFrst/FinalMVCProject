@model IEnumerable<FinalMVCProject.Models.Car>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Cars</h2>

        <a asp-action="Create" class="btn btn-success">
            + Add Car
        </a>
    </div>

    @if (!Model.Any())
    {
        <p>No cars available.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Category</th>
                    <th>Manufacturer</th>
                    <th>Owner</th>
                    <th style="width: 150px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@car.Brand</td>
                        <td>@car.Model</td>
                        <td>@car.Year</td>
                        <td>@car.Category?.Name</td>
                        <td>@car.Owner?.UserName</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-primary">Details</a>
                            <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
